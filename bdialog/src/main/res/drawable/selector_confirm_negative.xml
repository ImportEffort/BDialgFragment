<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dialog_confirm_negative_p"/>
            <corners android:radius="2dp" />
            <stroke android:color="@color/dialog_confirm_negative_stroke_p"
                    android:width="1px"/>
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="@color/dialog_confirm_negative"/>
            <corners android:radius="2dp" />
            <stroke android:color="@color/dialog_confirm_negative_stroke"
                    android:width="1px"/>
        </shape>
    </item>

</selector>